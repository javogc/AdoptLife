                    <%= hidden_field_tag :action, 'delete' -%>
                    <%= hidden_field_tag :request, sent.id %>
                    <%= submit_tag 'Cancel Request' -%>
                  <%- end -%>
                <%when "accepted adoption"%>
                  Aceptado por
            <%=link_to sent.recipient.fname, sent.recipient%></p>
                <%when "denied adoption" %>
                  Negado</h2>
                <%when "propose change" %>
                        Cambios propuestos por
                  <%=link_to sent.recipient.fname, sent.recipient%></p>
                  <div><%= form_for sent, method: 'put' do |f| %>
                    <%= f.date_field(:date) %>
                    <%= f.time_field(:time) %>
