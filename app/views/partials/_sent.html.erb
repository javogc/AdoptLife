<div class="col s2">
        <div class="card" >
            <div class="card-image" style="height: 200px;">
              <%= image_tag Animal.find(sent.animal_id).photo.url Animal.find(sent.animal_id).photo? %>
            </div>

            <div class="card-content" style="height: 420px;">
               <p>Name: <%= sent.status %></p>
               <p><%= Animal.find(sent.animal_id).name %></p>
               <% status = sent.status %>
               <p><% case status when "sent for adoption"%>
                    <Enviado a
                  <%=link_to sent.recipient.fname, sent.recipient%></h2>
                  <%= form_for sent, method: 'delete' do -%>
                    <%= hidden_field_tag :action, 'delete' -%>
                    <%= hidden_field_tag :request, sent.id %>
                    <%= submit_tag 'Cancel Request' -%>
                    <% end %>
              <%when "sent for meetup"%>
                  <b>Meetup</b> Enviado a
                  <%=link_to sent.recipient.fname, sent.recipient %></p>
                  <%= sent.date.strftime("Para conocerlo el %d/%m/%Y") %>
                  <%= sent.time.strftime("a las %I:%M%p") %>
