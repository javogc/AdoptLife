

<% provide(:title, 'Add animal') %>
<h1>Add animal</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@animal) do |f| %>

      <%=f.label :photo %>
      <%=f.file_field :photo, class: 'form-control'%>
      <br>
      <br>
      <%=f.label :name %>
      <%=f.text_field :name, class: 'form-control' %>


      <%=f.label :species%>
      <%= radio_button_tag(:species, "dog") %>
      <%= label_tag(:species_dog, "Dog") %>
      <%= radio_button_tag(:species, "cat") %>
      <%= label_tag(:species_cat, "Cat") %>
      <br>
      <br>
      <%=f.label :details%>
      <%= f.text_area :details,class: 'form-control'  %>
      <br>

      <%=f.label :size%>
      <%= radio_button_tag(:size, "big") %>
      <%= label_tag(:size_big, "Big") %>
      <%= radio_button_tag(:size, "medium") %>
      <%= label_tag(:size_medium, "Medium") %>
      <%= radio_button_tag(:size, "small") %>
      <%= label_tag(:size_small, "Small") %>

    <br>

     <%= f.hidden_field :rescuer_id, {value:current_user.id}%>
     <br>

      <%= f.submit "Rescue pet", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
