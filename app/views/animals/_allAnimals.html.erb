<div class="row">
  <%  @animals.each do |animal| %>
      <div class="col s2">
        <div class="card" >
            <div class="card-image" style="height: 200px;">
              <%= image_tag animal.photo.url %>
            </div>
            <div class="card-content" style="height: 35px;">
               <p>Nombre: <%= animal.name %></p>
            </div>
            <div class="card-content" style="height: 35px;">
               <p>Rescuer: <%= animal.rescuer.fname %></p>
            </div>
            <div class="card-content" style="height: 35px;">
               <p>Raza: <%= animal.species %></p>
            </div>
            <div class="card-action">
              <a href="/animals/<%= animal.id %>"><i class="material-icons">more_horiz</i></a>
            </div>
          </div>
      </div>

  <% end %>
</div>