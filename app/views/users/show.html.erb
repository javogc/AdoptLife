 <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

 <div class="container about">
        <h5><%= @user.fname %></h5>
        <hr>
        <div class="row">
          <div class="col s12 m4 l4">
            <h6>Perfil</h6>
            <div class="card #EDEDED">
              <div class="card-content white-text">
                <%= gravatar_for @user %>
       
              </div>
            </div>
          </div>
          <div class="col s12 m4 l4">
            
          </div>
          <div class="col s12 m4 l4">
            <h6>Datos</h6>
            <ul class="collapsible">
              <li class="active">
                <div class="collapsible-header"><i class="large material-icons">email</i>Correo</div>
                <div class="collapsible-body"><p><%= @user.email%> </p></div>
              </li>
              <li>
                <div class="collapsible-header"><i class="large material-icons">room</i>Direccion</div>
                <div class="collapsible-body"><p><%= @user.addrline1 +  @user.addrline2%> </div>
              </li>
              <li>
                <div class="collapsible-header"><i class="large material-icons">aspect_ratio</i>Metros Cuadrados</div>
                <div class="collapsible-body"><p><%= @user.square_meters%></p></div>
              </li>
            </ul>
          </div>
        </div>
      </div>

 <h3 class="header center teal-text text-lighten-2">Tus mascotas adoptadas: </h3>

<% @user.rescued_animals.each do |animal| %>
	<%= render partial: "partials/animal", object: animal %>
<% end %>

<h3 class="header center teal-text text-lighten-2"> Tus mascotas dadas en adopcion: </h3>

<% @user.adopted_animals.each do |animal| %>
  <%= render partial: "partials/animal", object: animal %>
<% end %>


<script type="text/javascript">
	 $(document).ready(function(){
            $('.collapsible').collapsible();
          });
</script>


<% provide(:title, @user.fname) %>
<h1>
  <%= gravatar_for @user %>
  <%= @user.fname %>
</h1>
<% if current_user == @user %>
  <h1> Received Requests </h1>
  <%if @received_requests%>
    <% @received_requests.each do |received| %>
      <div>
        <%= image_tag Animal.find(received.animal_id).photo.url Animal.find(received.animal_id).photo? %>
        <h2><%= Animal.find(received.animal_id).name %></h2>
        <% status = received.status %>
        <h2><% case status when "sent"%>
          Recibido de
          <%=link_to received.sender.fname, received.sender%></h2>
        <%when "accepted"%>
          Aceptado con
          <%=link_to received.sender.fname, received.sender%></h2>
        <%when "denied" %>
          Negado</h2>
        <% end %>
        <%= form_for received, method: 'put' do -%>
          <%= hidden_field_tag :action, 'accept' -%>
          <%= hidden_field_tag :adoptant, received.sender_id -%>
          <%= hidden_field_tag :status, 'accepted' -%>
          <%= submit_tag 'Accept' -%>
        <%- end -%>
        <%= form_for received, method: 'put' do -%>
          <%= hidden_field_tag :action, 'deny' -%>
          <%= hidden_field_tag :status, 'denied' -%>
          <%= submit_tag 'Deny' -%>
        <%- end -%>
      </div>
      <% end %>
    <% end %>

    <h1> Sent Requests </h1>
    <% if @received_requests%>
      <%@received_requests.each do |sent| %>
        <div>
          <%= image_tag Animal.find(sent.animal_id).photo.url if Animal.find(sent.animal_id).photo? %>
          <h2><%= Animal.find(sent.animal_id).name %></h2>
          <% status = sent.status %>
          <h2><% case status when "sent"%>
            Enviado a
            <%=link_to sent.sender.fname, sent.sender%></h2>
          <%when "accepted"%>
            Aceptado por
            <%=link_to sent.sender.fname, sent.sender%></h2>
          <%when "denied" %>
            Negado</h2>
          <% end %>
        </div>
        <% end %>
      <%end%>
<%end%>

<h1> Adopted Animals </h1>
<% if @adopted_animals%>
  <%@adopted_animals.each do |adopted| %>
    <div>
      <%= image_tag adopted.photo.url if adopted.photo? %>
      <h2><%=link_to adopted.name, adopted %></h2>
      <h3><%= adopted.species %></h3>
      <h3><%= adopted.details %></h3>
      <h3><%= adopted.size %></h3>
    </div>
  <% end %>
<%end%>

<h1> Rescued Animals </h1>
<% if @rescued_animals %>
  <%@rescued_animals.each do |rescued| %>
    <div>
      <%= image_tag rescued.photo.url if rescued.photo? %>
      <h2><%=link_to rescued.name, rescued %></h2>
      <h3><%= rescued.species %></h3>
      <h3><%= rescued.details %></h3>
      <h3><%= rescued.size %></h3>
    </div>
  <%end%>
<%end%>

<h1> Bookmarked Animals </h1>
<% if @bookmarked_animals %>
  <%@bookmarked_animals.each do |bookmarked| %>
    <div>
      <%= image_tag bookmarked.photo.url if bookmarked.photo? %>
      <h2><%=link_to bookmarked.name, bookmarked %></h2>
      <h3><%= bookmarked.species %></h3>
      <h3><%= bookmarked.details %></h3>
      <h3><%= bookmarked.size %></h3>
      <%= form_for @user, method: 'put' do -%>
        <%= hidden_field_tag :action, 'removeBookmark' -%>
        <%= hidden_field_tag :animal_to_remove, bookmarked.id -%>
        <%= submit_tag 'Remove Bookmark' -%>
      <%- end -%>
    </div>
  <%end%>
<%end%>
